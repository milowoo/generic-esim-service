{
  "name": "@genericesim",
  "version": "1.0.0",
  "description": "Generic eSIM service",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "shx rm -rf lib build reports",
    "format": "tsfmt -r",
    "compile": "tsc --pretty && echo TypeScript compile passed || echo TypeScript compile has error",
    "lint": "tslint --force --project tsconfig.json",
    "build": "npm run clean && npm run format && npm run compile && npm run lint",
    "test": "scripty",
    "test_1": "npm run build && mocha build/test/test-activateesimsubcrp.js | bunyan -L -o short",
    "test_2": "npm run build && mocha build/test/test-deactivateesimsubcrp.js | bunyan -L -o short",
    "prepublish": "shx cp -R build/src lib",
    "ci": "npm run build && npm run ci:test && npm run ci:coverage && npm run ci:lint && npm run prepublish",
    "ci:test": "XUNIT_FILE=reports/xunit.xml istanbul cover _mocha 'build/test/**/test-*.js' -- --reporter xunit-file",
    "ci:coverage": "remap-istanbul -i reports/coverage/coverage-final.json -t cobertura -o reports/coverage/cobertura.xml",
    "ci:lint": "tslint --force -t pmd --project tsconfig.json > reports/pmd.xml",
    "start": "log=`echo $npm_package_name | awk -F/ '{print $NF}'`; NODE_ENV=production node lib/index.js >> /var/log/miep/${log}.log 2>&1 &"
  },
  "main": "lib/index.js",
  "engines": {
    "node": "^5.0.0"
  },
  "dependencies": {
    "@common": "4.3.1",
    "@database": "2.0.1",
    "@distributed": "2.3.1",
    "body-parser": "1.14.2",
    "soap": "0.18.0-leo-1",
    "express": "4.13.4",
    "joi": "7.1.0",
    "lodash": "4.5.1",
    "request": "2.69.0",
    "pg": "4.5.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "3.4.34",
    "@types/express": "4.0.34",
    "@types/joi": "10.0.0",
    "@types/lodash": "4.14.44",
    "@types/mocha": "2.2.34",
    "@types/nock": "8.2.0",
    "@types/soap": "0.0.30",
    "@types/promisify-supertest": "1.0.31",
    "@types/request": "0.0.36",
    "@types/sinon": "1.16.33",
    "@types/sinon-chai": "2.7.27",
    "@types/supertest": "2.0.0",
    "chai": "3.5.0",
    "mocha": "3.2.0",
    "nock": "9.0.8",
    "promisify-supertest": "1.0.0",
    "remap-istanbul": "0.6.3",
    "scripty": "1.7.1",
    "shx": "0.2.2",
    "sinon": "1.17.7",
    "sinon-chai": "2.8.0",
    "supertest": "3.0.0",
    "tslint": "4.3.1",
    "tslint-eslint-rules": "3.2.3",
    "typescript": "2.1.5",
    "typescript-formatter": "4.0.1",
    "xunit-file": "1.0.0"
  }
}
